
@{
    ViewData["Title"] = "Index";
}

@model List<Product>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Products</h6>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>CostPrice</th>
                        <th>SellPrice</th>
                        <th>PCount</th>
                        <th>Discount</th>
                        <th>CompanyId</th>
                        <th>File</th>
                        <th colspan="3">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><img src="~/imgs/products/@item.CoverImage" /></td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.CostPrice</td>
                            <td>@item.SellPrice</td>
                            <td>@item.PCount</td>
                            <td>@item.Discount</td>
                            <td>@item.CompanyId</td>
                            <td><a class="btn btn-success" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                            <td><a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


